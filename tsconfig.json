{
  "compilerOptions": {
    "target": "ES2022",                                 
    "module": "commonjs",                               
    "rootDir": "./src",                                  
    "outDir": "./dist",                                   
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,        
    "strict": true,
    "skipLibCheck": true,  
  },
  "include": [
    "src/**/*.ts",
    ".eslintrc.js"
  ]                               
}